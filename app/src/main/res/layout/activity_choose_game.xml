<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ECC34B"
    tools:context=".SplashActivity">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="134dp"
        android:layout_height="90dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:src="@drawable/math_quiz" />

    <TextView
        android:id="@+id/slogan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/imageView3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="-26dp"
        android:fontFamily="@font/aclonica"
        android:gravity="center"
        android:text="@string/slogan"
        android:textColor="#fff"
        android:textSize="18sp" />

    <Button
        android:id="@+id/btn_addition"
        android:layout_width="281dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/slogan"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:background="@drawable/round_button"
        android:backgroundTint="#FF5722"
        android:fontFamily="@font/joti_one"
        android:onClick="addition"
        android:text="@string/addition"
        android:textColor="#fff"
        android:textSize="24sp" />

    <Button
        android:id="@+id/btn_subtraction"
        android:layout_width="281dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_addition"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:onClick="subtraction"
        android:fontFamily="@font/joti_one"
        android:background="@drawable/round_button"
        android:backgroundTint="#E91E63"
        android:text="@string/subtraction"
        android:textColor="#fff"
        android:textSize="24sp" />

    <Button
        android:id="@+id/btn_multiplication"
        android:layout_width="281dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_subtraction"
        android:onClick="multiplication"
        android:fontFamily="@font/joti_one"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/round_button"
        android:backgroundTint="#9C27B0"
        android:text="@string/multiplication"
        android:textColor="#fff"
        android:textSize="24sp" />

    <Button
        android:id="@+id/btn_division"
        android:layout_width="281dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_multiplication"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:onClick="division"
        android:fontFamily="@font/joti_one"
        android:background="@drawable/round_button"
        android:backgroundTint="#4CAF50"
        android:text="@string/division"
        android:textColor="#fff"
        android:textSize="24sp" />


</RelativeLayout>
